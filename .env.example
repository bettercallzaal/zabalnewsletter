OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Alternative 1: Use Ollama (Local, Open Source, FREE) - RECOMMENDED
# Install: https://ollama.com/download
# No API key needed! Runs locally on your Mac
USE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
# Recommended models: llama3.2, qwen2.5, mistral, gemma2
OLLAMA_MODEL=llama3.2

# Alternative 2: Use Claude (Anthropic) - Good free tier
# Get free API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
USE_CLAUDE=false
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Alternative 3: Use OpenRouter for free models
# Get free API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
USE_OPENROUTER=false
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
